.box {
  position: relative;
  margin: 40px auto;
  width: 90%; 
  max-width: 1100px; 
  background: #fff;
  border-radius: 2px;
}

.box::before,
.box::after {
  content: '';
  position: absolute;
  bottom: 10px;
  width: 40%;
  height: 10px;
  box-shadow: 0 5px 14px rgba(0,0,0,.7);
  z-index: -1;
  transition: all .3s ease-in-out;
}

.box::before {
  top: 92%;

  left: 15px;
  transform: skew(-5deg) rotate(-5deg);
}

.box::after {
  top: 92%;
  right: 15px;
  transform: skew(5deg) rotate(5deg);
}

.box:hover::before,
.box:hover::after {
  box-shadow: 0 2px 14px rgba(0,0,0,.9);
  transition: .3s;
}

.box:hover::before {
  left: 5px;
  box-shadow: 0 2px 14px rgba(0,0,0,0);

}


.box:hover::after {
  right: 5px;
  box-shadow: 0 2px 14px rgba(0,0,0,0);
}
 
